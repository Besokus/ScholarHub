// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      Role     @default(STUDENT)
  avatar    String?
  email     String   @unique
  title     String? // Teacher only

  courses  Course[]
  resources Resource[]
  questions Question[]
  answers   Answer[]
}

model Course {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  department  String
  teacherId   Int
  teacher     User     @relation(fields: [teacherId], references: [id])

  resources Resource[]
  questions Question[]
}

model Resource {
  id            Int          @id @default(autoincrement())
  title         String
  description   String?
  filePath      String
  uploaderId    Int
  uploader      User         @relation(fields: [uploaderId], references: [id])
  courseId      Int
  course        Course       @relation(fields: [courseId], references: [id])
  viewType      ResourceType @default(PUBLIC)
  downloadCount Int          @default(0)
  createTime    DateTime     @default(now())
}

model Question {
  id         Int            @id @default(autoincrement())
  title      String
  content    String
  studentId  Int
  student    User           @relation(fields: [studentId], references: [id])
  courseId   Int
  course     Course         @relation(fields: [courseId], references: [id])
  status     QuestionStatus @default(UNANSWERED)
  createTime DateTime       @default(now())
  images     String?

  answers Answer[]
}

model Answer {
  id          Int      @id @default(autoincrement())
  questionId  Int
  question    Question @relation(fields: [questionId], references: [id])
  teacherId   Int
  teacher     User     @relation(fields: [teacherId], references: [id])
  content     String
  attachments String?
  createTime  DateTime @default(now())
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

enum ResourceType {
  PUBLIC
  CLASS_ONLY
}

enum QuestionStatus {
  UNANSWERED
  ANSWERED
}
