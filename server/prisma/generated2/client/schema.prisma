generator client {
  provider = "prisma-client-js"
  output   = "./generated2/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  username      String         @unique
  fullName      String?        @map("fullname")
  password      String
  role          String         @default("STUDENT")
  avatar        String?
  email         String         @unique
  title         String?
  employeeId    String?        @unique
  uploads       Int            @default(0)
  downloads     Int            @default(0)
  answers       Answer[]
  courses       Course[]
  notifications Notification[]
  questions     Question[]
  resources     Resource[]
}

model Course {
  id               Int             @id @default(autoincrement())
  name             String
  description      String?
  department       String
  teacherId        String
  courseCategoryId Int?
  categoryId       Int?
  teacher          User            @relation(fields: [teacherId], references: [id])
  courseCategory   CourseCategory? @relation(fields: [courseCategoryId], references: [id], onUpdate: Cascade, onDelete: SetNull)
  category         Category?       @relation(fields: [categoryId], references: [id])
  questions        Question[]
  resources        Resource[]

  @@index([courseCategoryId])
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String
  code      String     @unique
  parentId  Int?
  sortOrder Int        @default(0)
  parent    Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryHierarchy")
  courses   Course[]
}

model CourseCategory {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  courses     Course[]

  @@index([name])
}

model Resource {
  id            Int      @id @default(autoincrement())
  title         String
  description   String?
  filePath      String
  uploaderId    String
  courseId      Int
  viewType      String   @default("PUBLIC")
  downloadCount Int      @default(0)
  createTime    DateTime @default(now())
  fileSize      String?
  fileType      String?
  viewCount     Int      @default(0) @map("viewcount")
  status        String   @default("NORMAL")
  course        Course   @relation(fields: [courseId], references: [id])
  uploader      User     @relation(fields: [uploaderId], references: [id])
}

model Question {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  studentId  String
  courseId   Int
  status     String   @default("UNANSWERED")
  createTime DateTime @default(now())
  images     String?
  viewCount  Int      @default(0) @map("viewcount")
  answers    Answer[]
  course     Course   @relation(fields: [courseId], references: [id])
  student    User     @relation(fields: [studentId], references: [id])

  @@index([viewCount])
}

model Answer {
  id          Int      @id @default(autoincrement())
  questionId  Int
  teacherId   String
  content     String
  attachments String?
  createTime  DateTime @default(now())
  isTop       Boolean  @default(false)
  hidden      Boolean  @default(false)
  question    Question @relation(fields: [questionId], references: [id])
  teacher     User     @relation(fields: [teacherId], references: [id])
}

model Notification {
  type       String
  questionId Int?
  userId     String
  read       Boolean  @default(false)
  createTime DateTime @default(now())
  answerId   Int?
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
}

model AdminLog {
  id         Int      @id @default(autoincrement())
  adminId    String
  actionType String
  targetId   String
  details    String?
  createTime DateTime @default(now())
}
